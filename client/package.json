{
    "name": "deploy",
    "version": "0.1.0",
    "browserslist": {
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ],
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ]
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "plugin:prettier/recommended"
        ],
        "settings": {
            "import/resolver": {
                "node": {
                    "paths": [
                        "src"
                    ]
                }
            }
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,json,css}": [
            "prettier --write",
            "./node_modules/.bin/eslint --max-warnings 0",
            "git add"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4
    },
    "private": true,
    "scripts": {
        "build": "react-scripts build",
        "start": "react-scripts start"
    },
    "dependencies": {
        "axios": "^0.19.2",
        "platform": "^1.3.6",
        "prop-types": "^15.7.2",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-router-dom": "^5.2.0",
        "react-scripts": "3.4.1",
        "semantic-ui-css": "^2.4.1",
        "semantic-ui-react": "^0.88.2",
        "supertokens-website": "^4.1.4"
    },
    "devDependencies": {
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.3",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5"
    }
}
